---
import { Badge } from "@/components/ui/badge";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";

interface Props {
  title: string;
  prepTimeMinutes?: number | null;
  dietLabel: string;
  calories?: number | null;
  aiNotes?: string | null;
}

const { title, prepTimeMinutes = null, dietLabel, calories = null, aiNotes = null } = Astro.props;
---

<header class="space-y-4">
  <div class="space-y-2">
    <h1 class="text-3xl font-semibold tracking-tight md:text-4xl">{title}</h1>
    <div class="flex flex-wrap items-center gap-2">
      {prepTimeMinutes !== null && <Badge variant="secondary">Time: {prepTimeMinutes} min</Badge>}
      <Badge variant="outline">{dietLabel}</Badge>
      {calories !== null && <Badge variant="secondary">{calories} kcal</Badge>}
    </div>
  </div>

  {
    aiNotes && (
      <Alert>
        <AlertTitle>Note</AlertTitle>
        <AlertDescription>{aiNotes}</AlertDescription>
      </Alert>
    )
  }
</header>
